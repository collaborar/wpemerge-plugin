{
	"name": "wpemerge-plugin",
	"engines": {
		"node": ">= 20"
	},
	"scripts": {
		"start": "wp-scripts start",
		"hot": "wp-scripts start --hot",
		"build": "wp-scripts build",
		"lint": "concurrently 'pnpm lint:wpcs' 'pnpm lint:scripts' 'pnpm lint:styles' 'pnpm format'",
		"lint-fix": "concurrently 'pnpm lint-fix:wpcs' 'pnpm lint-fix:scripts' 'pnpm lint-fix:styles'",
		"lint:wpcs": "./vendor/bin/phpcs --colors --standard=phpcs.xml ./",
		"lint:scripts": "wp-scripts lint-js",
		"lint:styles": "wp-scripts lint-style",
		"lint-fix:wpcs": "./vendor/bin/phpcbf --colors --standard=phpcs.xml ./",
		"lint-fix:scripts": "wp-scripts lint-js --fix",
		"lint-fix:styles": "wp-scripts lint-style --fix",
		"i18n": "concurrently 'pnpm i18n:pot' 'pnpm i18n:json'",
		"i18n:pot": "./vendor/bin/wp i18n make-pot . languages/my_app.pot --exclude=dist,test,node_modules,vendor --domain=my_app",
		"i18n:json": "./vendor/bin/wp i18n make-json languages",
		"format": "wp-scripts format",
		"packages-update": "wp-scripts packages-update",
		"rebrand": "node resources/build/rebrand/rebrand.js",
		"release": "concurrently 'pnpm build' 'composer install --no-dev --classmap-authoritative' 'pnpm release:zip'",
		"release:zip": "wp-scripts plugin-zip"
	},
	"devDependencies": {
		"@inquirer/prompts": "^8.0.2",
		"@types/node": "^24.10.1",
		"@types/webpack-env": "^1.18.8",
		"@wordpress/scripts": "^31.1.0",
		"change-case": "^5.4.4",
		"concurrently": "^9.2.1",
		"eslint-import-resolver-alias": "^1.1.2",
		"replace-in-file": "^8.4.0",
		"shelljs": "^0.10.0",
		"svg-sprite-loader": "^6.0.11",
		"webpack-manifest-plugin": "^6.0.1",
		"webpack-merge": "^6.0.1",
		"yoctocolors-cjs": "^2.1.3"
	},
	"files": [
		"app/",
		"dist/",
		"languages/",
		"vendor/",
		"views/",
		"LICENSE",
		"CHANGELOG.md",
		"README.md",
		"*.php"
	]
}
